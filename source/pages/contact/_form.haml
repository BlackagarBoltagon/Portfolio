%form{action: "http://api.hmu.cool/messages/1f42b06bf81f3885a1276ceb22c2bb53", "accept-charset": "utf-8", method: "post"}
  %p
    %label Your name
    %input{type: "text", name: "name", id: "name", required: "true"}
  %p
    %label Your email
    %input{type: "email", name: "email", id: "email", required: "true"}
  %p
    %label 
      Your budget
      %span.hint If you're not sure, it's okay, just guesstimate
    %select{name: "budget", id: "budget"}
      %option{value: "5-10k"} $5.000 - $10.000
      %option{value: "10-25k"} $10.000 - $25.000
      %option{value: "25-50k"} $25.000 - $50.000
      %option{value: "50k+"} $50.000+
  %p.long-text
    %label
      How can I help you?
      %span.hint e.g. We recently got funded, we need a designer to help us redesign our MVP into a real product.
    %textarea{name: "description", id: "description", rows: "8", cols: "80", required: "true"}
  %p.actions
    %input#btn_contact_submit{type: "submit", value: "Let's do it!"}
